<?xml version="1.0"?>
<project name="src" default="create-bantamc" basedir=".">

    <condition property="this.is.unix">
        <os family="unix"/>
    </condition>

    <condition property="this.is.windows">
        <os family="windows"/>
    </condition>

    <condition property="BTMC" value="../../bin/bantamc">
        <isset property="this.is.unix"/>
    </condition>
    <condition property="BTMC" value="..\..\bin\bantamc.bat">
        <isset property="this.is.windows"/>
    </condition>

    <condition property="classpath" value="${basedir}:${basedir}/../../bin">
        <isset property="this.is.unix"/>
    </condition>
    <condition property="classpath" value="${basedir};${basedir}\..\..\bin">
        <isset property="this.is.windows"/>
    </condition>

    <property name="LPKG" value="lexer"/>
    <property name="LSRC" value="${LPKG}/lexer.jlex"/>
    <property name="LGEN" value="${LPKG}/Lexer.java"/>
    <property name="PPKG" value="parser"/>
    <property name="PSRC" value="${PPKG}/parser.cup"/>
    <property name="JLEX" value="../../bin"/>
    <property name="JAVACUP" value="../../bin"/>
    <property name="FLAGS" value="-t mips"/>


    <target name="build-lexer">
        <java classname="JLex.Main" fork="true">
            <classpath path="../../bin"/>
            <arg line="${LSRC}"/>
        </java>
        <move file="${LSRC}.java" tofile="${LGEN}"/>
    </target>

    <target name="build-parser">
        <java classname="java_cup.Main" fork="true" input="${PSRC}"
              error="${PPKG}/parser-out.txt">
            <classpath path="../../bin"/>
            <arg line="-parser"/>
            <arg line="Parser"/>
            <arg line="-symbols"/>
            <arg line="TokenIds"/>
            <arg line="-expect"/>
            <arg line="100"/>
            <arg line="-nopositions"/>
            <arg line="-dump"/>
        </java>
        <move file="Parser.java" tofile="${PPKG}/Parser.java"/>
        <move file="TokenIds.java" tofile="${PPKG}/TokenIds.java"/>

    </target>

    <target name="build-compiler" depends="build-lexer,build-parser">
        <javac srcdir="${basedir}" classpath="${classpath}" fork="true"/>
    </target>

    <target name="create-bantamc" depends="build-compiler">
        <antcall target="create-bantamc-on-unix"/>
        <antcall target="create-bantamc-on-windows"/>
    </target>

    <target name="create-bantamc-on-unix" if="this.is.unix">
        <!-- create the script that runs the compiler -->
        <echo file="${BTMC}">#!/bin/sh
            java -classpath ${classpath} bantam.Main $$*
        </echo>
        <chmod file="${BTMC}" perm="ugo+rx"/>
    </target>

    <target name="create-bantamc-on-windows" if="this.is.windows">
        <!-- create the script that runs the compiler -->
        <echo file="${BTMC}">java -classpath "${classpath}" bantam.Main %*
        </echo>
        <chmod file="${BTMC}" perm="ugo+rx"/>
    </target>

    <target name="run-bantamc" depends="build-compiler">
        <!-- run the compiler by typing (without using the script above):
         ant run-bantamc -DFLAGS="..." -DSRC="..."
      -->
        <java classname="bantam.Main" fork="true">
            <classpath path="${classpath}"/>
            <arg line="${FLAGS}"/>
            <arg line="${SRC}"/>
        </java>
    </target>

    <target name="copy-ref">
        <copy toDir="." overwrite="true">
            <fileset dir="." includes="**/*.class.ref"/>
            <mapper type="glob" from="*.class.ref" to="*.class"/>
        </copy>
    </target>

    <target name="clean">
        <delete>
            <fileset dir="." includes="**/*.class"/>
            <fileset dir="${LPKG}" includes="Lexer.java"/>
            <fileset dir="${PPKG}" includes="*.java"/>
            <fileset dir="../../bin" includes="bantamc*"/>
            <fileset dir="." includes="**/*.s"/>
            <fileset dir="." includes="**/*~" defaultexcludes="no"/>
            <fileset dir="." includes="**/*#*" defaultexcludes="no"/>
        </delete>
    </target>
</project>
